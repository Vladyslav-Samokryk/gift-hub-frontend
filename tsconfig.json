{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": "./",
    "paths": {
      "@src/*": [
        "src/*"
      ],
      "@app/*": [
        "src/app/*"
      ],
      "@api": [
        "src/app/api"
      ],
      "@config": [
        "src/app/api/config"
      ],
      "@i18n": [
        "src/app/i18n/index.ts"
      ],
      "@layouts": [
        "src/app/layouts"
      ],
      "@navigation": [
        "src/app/navigation"
      ],
      "@store": [
        "src/app/store"
      ],
      "@styles": [
        "src/app/styles/index.scss"
      ],
      "@components": [
        "src/components/index.ts"
      ],
      "@shared": [
        "src/shared/index.ts"
      ],
      "@pages": [
        "src/pages"
      ],
      "@context/*": [
        "src/app/context/*"
      ],
      "@public/*": [
        "public/*"
      ],
    }
  },
  "include": [
    "src",
    "tailwind.config.js",
    "prettier.config.js",
    ".eslintrc.cjs",
    "vite.config.ts"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}